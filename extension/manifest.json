{
  "name": "M Downloader",
  "version": "0.0.1",
  "description": "This extension will help you to download any media file from any website.",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "activeTab",
    "nativeMessaging",
    "downloads",
    "offscreen",
    "webRequest"
  ],
  "author": "Dio Mirox",
  "action": {
    "default_popup": "index.html",
    "default_title": "M Downloader"
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://*.lezhinus.com/*",
        "https://*.bomtoon.com/*"
      ],
      "js": [
        "lezhinus.js",
        "bomtoon.js"
      ]
    }
  ],
  "host_permissions": [
    "https://*.lezhinus.com/*",
    "https://*.bomtoon.com/*",
    "*://*.balcony.studio/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}